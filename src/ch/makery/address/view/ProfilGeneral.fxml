<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.model.ProfilGeneralController">

    <!-- Barre latérale gauche -->
    <left>
        <VBox prefWidth="200.0" spacing="20.0" style="-fx-background-color: #2C3E50;" styleClass="sidebar">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Menu" />
            <Separator style="-fx-background-color: #34495E;" />

            <Button fx:id="btnAccueil" prefWidth="180" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" styleClass="nav-button" text="Mon profil" />
            <Button fx:id="btnPoubelles" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Historique" />
            <Button fx:id="btnBonsAchat" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Bons d'achat" />
            <Button fx:id="btnCommerces" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Commerces" />

            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="btnDeconnexion" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Déconnexion" />
        </VBox>
    </left>

    <!-- Contenu principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Ligne supérieure avec bouton + points -->
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Points :" />
                <Label fx:id="lblPoints" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27AE60;" text="750" />
                <Button fx:id="btnFaireDepot" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-padding: 8px 15px;" text="Faire un dépôt" />
            </HBox>

            <!-- Contenu principal de la page profil (à personnaliser) -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Bienvenue sur votre profil général !" />
         <TableView prefHeight="200.0" prefWidth="200.0">
           <columns>
             <TableColumn prefWidth="330.3999938964844" text="Information " />
             <TableColumn prefWidth="330.39996337890625" text="Vos informations" />
           </columns>
         </TableView>
            <!-- Ajoute ici les infos que tu veux afficher : nom, email, stats, etc. -->

        </VBox>
    </center>

    <!-- Barre inférieure -->
    <bottom>
        <HBox prefWidth="898.0" style="-fx-background-color: #ECF0F1; -fx-padding: 5px 15px;">
            <Label style="-fx-text-fill: #7F8C8D;" text="© 2025 - CY Tech G2 - Projet Gestion de Tri sélectif" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblStatusBar" style="-fx-text-fill: #7F8C8D;" text="Connecté en tant que: Utilisateur" />
        </HBox>
    </bottom>

</BorderPane>
