<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.makery.tri.controller.ContratCommerceController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <Label text="Informations du Contrat" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Label text="Date de début :" />
            <Label fx:id="dateDebutLabel" text="01/01/2025" />
        </HBox>

        <HBox spacing="10">
            <Label text="Date de fin :" />
            <Label fx:id="dateFinLabel" text="01/07/2025" />
        </HBox>

        <Label text="Catégories éligibles :" />
        <ListView fx:id="categoriesListView" prefHeight="150" />
    </VBox>
</AnchorPane>
