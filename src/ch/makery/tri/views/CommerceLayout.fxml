<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.makery.tri.controller.CommerceLayoutController"
            prefWidth="800" prefHeight="500">

    <SplitPane prefWidth="800.0" prefHeight="500.0" dividerPositions="0.25" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <items>
            <!-- Navigation gauche -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
                <Label text="Navigation" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                <Button text="Produits" onAction="#handleShowProduits" />
                <Button text="Contrat" onAction="#handleShowContrat" />
            </VBox>

            <!-- Zone centrale (chargÃ©e dynamiquement) -->
            <AnchorPane fx:id="contentPane" />
        </items>
    </SplitPane>
</AnchorPane>
